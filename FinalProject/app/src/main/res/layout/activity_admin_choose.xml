<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminChoose">

    <LinearLayout
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/muli_semibold_italic"
            android:gravity="center"
            android:paddingLeft="-130dp"
            android:text="Select One to Edit: "
            android:textSize="20sp" />

    </LinearLayout>


    <Button
        android:id="@+id/servicesBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#c3e6ce"
        android:fontFamily="@font/muli_light"
        android:text="Services."
        android:textColor="#424445"
        android:textSize="32sp" />

    <Button
        android:id="@+id/usersBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#add5e0"
        android:fontFamily="@font/muli_light"
        android:text="Users."
        android:textColor="#424445"
        android:textSize="32sp" />

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>