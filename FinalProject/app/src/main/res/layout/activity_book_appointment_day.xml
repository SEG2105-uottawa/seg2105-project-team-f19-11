<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dev4.BookAppointmentDay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#c3e6ce">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:paddingLeft="20dp"
                android:src="@drawable/arrow_back" />

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/muli_semibold_italic"
                android:gravity="center"
                android:paddingLeft="-40dp"
                android:text="Book Appointment"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click a date to book your appointment:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="17sp"/>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxDate="12/31/2019"
            android:minDate="11/29/2019" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/mondayHours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Mo: 8:00 - 16:30"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="0dp"/>

                <TextView
                    android:id="@+id/fridayHours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Fr: 8:00 - 16:30"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:textSize="17sp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="7dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tuesdayHours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="Tu: 8:00 - 16:30"
                android:textSize="17sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"/>

            <TextView
                android:id="@+id/saturdayHours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sa: 10:00 - 15:00"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textSize="17sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/wednesdayHours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="We: 9:00 - 16:30"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:textSize="17sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"/>

            <TextView
                android:id="@+id/sundayHours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Su: Closed"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textSize="17sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/thursdayHours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Th: 9:00 - 17:00"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:textSize="17sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>