<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_sign_in">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#add5e0"
        >


        <TextView
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/muli_light"
            android:text="Sign In"
            android:textColor="#424445"
            android:textSize="38sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/enter_email"
            android:layout_width="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_in"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="30"
            android:inputType="textPersonName"
            android:hint="Email"
            android:fontFamily="@font/muli_light"/>

        <EditText
            android:id="@+id/enter_password"
            android:layout_width="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_email"
            android:layout_centerHorizontal = "true"
            android:ems="30"
            android:layout_marginTop = "10dp"
            android:hint = "Password"
            android:inputType="textPassword"
            android:fontFamily="@font/muli_light"
            />

        <Button
            android:id = "@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="225dp"
            android:layout_centerHorizontal="true"
            android:text = "Login"
            android:layout_below="@+id/enter_password"
            android:layout_marginTop="50dp"
            android:background="#c3e6ce"
            android:textColor="#424445"
            android:textSize="20sp"
            android:fontFamily="@font/muli_light"
            />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text = "or"
            android:textColor="#424445"
            android:fontFamily="@font/muli_light"
            />

        <Button
            android:id = "@+id/create_account"
            android:onClick="createAccountClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="250dp"
            android:layout_centerHorizontal="true"
            android:text = "Create Account"
            android:textColor="#ffffff"
            android:background="#424445"
            android:layout_below="@+id/or"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/muli_light"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>